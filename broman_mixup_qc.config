// Configuration for standalone Broman Mixup QC analysis

params {
    // Study information
    study_prefix = 'DOChln'

    // Input files (adjust paths as needed)
    cross2_file = "${launchDir}/results/04_cross2_creation/DOChln_cross2.rds"
    genoprob_file = "${launchDir}/results/05_genome_scan_preparation/DOChln_genoprob.rds"
    expr_data_file = "${launchDir}/results/01_phenotype_processing/DOChln_pheno.csv"
    expr_peaks_file = "${launchDir}/results/06_qtl_analysis/DOChln_all_peaks.csv"

    // Analysis parameters
    n_top_eqtl = 100  // Number of top eQTL to use for mixup detection

    // Output directory
    outdir = "${launchDir}/results"
}

// Process configuration
process {
    executor = 'slurm'

    withName: BROMAN_MIXUP_QC {
        cpus   = 16
        memory = '64 GB'
        time   = '4h'
        clusterOptions = '--account=do2_projects --partition=ceres'
    }
}

// Execution settings
executor {
    queueSize = 10
    submitRateLimit = '10 sec'
}

// Report settings
report {
    enabled = true
    file = "${params.outdir}/mixup_qc/broman_mixup_qc_report.html"
}

trace {
    enabled = true
    file = "${params.outdir}/mixup_qc/broman_mixup_qc_trace.txt"
}

timeline {
    enabled = true
    file = "${params.outdir}/mixup_qc/broman_mixup_qc_timeline.html"
}
